{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Next.js specific
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "incremental": true,
    "plugins": [{ "name": "next" }],

    // Module Resolution
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Path Aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared-types": ["../../packages/shared-types/src"],
      "@ui": ["../../packages/ui/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
