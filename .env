# ==============================================
# SIGNAGE - Environment Variables Example
# ==============================================
# Copy this file to .env and fill with your values

# ==============================================
# Node Environment
# ==============================================
NODE_ENV=development

# ==============================================
# Backend API
# ==============================================
BACKEND_PORT=3001
BACKEND_URL=http://localhost:3001

# ==============================================
# Frontend
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# ==============================================
# Database - PostgreSQL
# ==============================================
DATABASE_URL=postgresql://signage:signage_dev@localhost:5432/signage
POSTGRES_USER=signage
POSTGRES_PASSWORD=signage_dev
POSTGRES_DB=signage

# ==============================================
# Redis
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ==============================================
# MinIO (S3-compatible storage)
# ==============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=signage-content
MINIO_USE_SSL=false

# ==============================================
# Authentication
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 2FA
OTP_SECRET_LENGTH=32
OTP_WINDOW=1

# Bcrypt
BCRYPT_ROUNDS=12

# ==============================================
# Socket.io
# ==============================================
SOCKET_PATH=/socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000

# ==============================================
# BullMQ (Job Queues)
# ==============================================
BULLMQ_REDIS_HOST=localhost
BULLMQ_REDIS_PORT=6379

# ==============================================
# FFmpeg
# ==============================================
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
VIDEO_PROCESSING_WORKERS=4

# ==============================================
# Monitoring & Logging
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=json

# Prometheus
PROMETHEUS_PORT=9090

# ==============================================
# CORS
# ==============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Upload Limits
# ==============================================
MAX_FILE_SIZE=5368709120
# 5GB in bytes (5 * 1024 * 1024 * 1024)
